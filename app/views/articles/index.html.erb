<h1>Articles</h1> <%= link_to "add a new article", new_article_path %>

<%@articles.each do |article| %>
  <div class="container">
    <div class="row">
      <div class="col-sm-8 col-sm-offset-2">
        <h2><%=link_to article.title, article_path(article) %></h2>
        <p><%= article.content %></p>
      </div>
    </div>
  </div>
<% end %>
